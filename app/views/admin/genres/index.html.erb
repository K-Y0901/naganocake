<h4>ジャンル一覧・追加</h4>
<%= form_with url: admin_genres_path, model:@genre, local:true do |f| %>

  <h5>ジャンル</h5>
  <%= f.text_field :name %>

  <label><%= f.radio_button :is_active, "true" %>有効</label>
  <label><%= f.radio_button :is_active, "false" %>無効</label>

  <%= f.submit '追加' %>

<% end %>

<div class="j-index">
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th>状態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.is_active %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class:"btn btn-primary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>



</div>
