<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
     <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at, admin_order_path(order) %></td>
      <td><%= order.end_user.first_name %> <%= order.end_user.last_name %></td>
      <td><%= order.order_items.sum(:amount) %></td>
      <td><%= order.order_status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>